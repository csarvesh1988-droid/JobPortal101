# JobPortal101 Configuration

# Server
PORT=8080
GIN_MODE=release
ENVIRONMENT=production

# Database
DATABASE_URL=postgres://postgres:password@localhost:5432/jobportal101?sslmode=disable

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h

# File Storage (MinIO S3-compatible)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=jobportal-files
STORAGE_USE_SSL=false

# Email Configuration (Admin configurable)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@jobportal101.com
SMTP_FROM_NAME=JobPortal101

# Application Settings
SIGNUP_BONUS_POINTS=50
PROFILE_COMPLETION_BONUS=100
REFERRAL_BONUS_POINTS=200
MAX_APPLICATIONS_PER_DAY=10
FEATURED_JOB_DURATION_DAYS=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Security
BCRYPT_COST=12
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://jobportal101.com

# File Upload Limits
MAX_RESUME_SIZE_MB=5
MAX_IMAGE_SIZE_MB=2
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx